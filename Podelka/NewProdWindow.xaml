<Window x:Class="Podelka.NewProdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Podelka"
        mc:Ignorable="d"
        Title="NewProdWindow" Height="190" Width="394">
    <Grid>
        <Label Content="Название" HorizontalAlignment="Left" Margin="28,39,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="ProdBox" Text ="{Binding TextName}" Margin="139,47,86,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Количество" HorizontalAlignment="Left" Margin="28,73,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox HorizontalAlignment="Left" Text ="{Binding TextQuantity}" Margin="139,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" FontSize="14"/>
        <Button Command ="{Binding AddProd}" Content="Добавить" HorizontalAlignment="Left" Margin="31,114,0,0" VerticalAlignment="Top" Width="129" FontSize="14"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="176,114,0,0" VerticalAlignment="Top" Width="139" FontSize="14" Click="Button_Click"/>

    </Grid>
</Window>
