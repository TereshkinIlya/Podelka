<Window x:Class="Podelka.ChangeProdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Podelka"
        mc:Ignorable="d"
        Title="ChangeProdWindow" Height="265" Width="446">
    <Grid Margin="0,0,10,9">
        <Label  Content="Название" HorizontalAlignment="Left" Margin="54,57,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox Text="{Binding TextName}" HorizontalAlignment="Left" Margin="191,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="225" FontSize="16"/>
        <Label Content="Количество" HorizontalAlignment="Left" Margin="54,110,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox Text="{Binding TextQuantity}" HorizontalAlignment="Left" Margin="191,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <Button Command="{Binding ChangeProd}" Content="Изменить" HorizontalAlignment="Left" Margin="54,182,0,0" VerticalAlignment="Top" FontSize="16" Width="111"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="217,182,0,0" VerticalAlignment="Top" FontSize="16" Width="110" Click="Button_Click"/>
        
    </Grid>
</Window>
