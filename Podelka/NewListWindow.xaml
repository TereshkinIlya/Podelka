<Window x:Class="Podelka.NewListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Podelka"
        mc:Ignorable="d"
        Title="NewListWindow" Height="235" Width="399">
    <Grid Margin="0,0,21,16">
        <Label Content="Дата" HorizontalAlignment="Left" Margin="36,38,0,0" VerticalAlignment="Top" FontSize="14"/>
        <DatePicker x:Name="CurrDate" SelectedDate="{Binding Path=TextDate}" HorizontalAlignment="Left" Margin="141,40,0,0" VerticalAlignment="Top" FontSize="14" Width="190"/>
        <Label Content="Название" HorizontalAlignment="Left" Margin="36,88,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox Text="{Binding TextName}" HorizontalAlignment="Left" Margin="141,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" FontSize="14"/>
        <Button Command="{Binding AddList}" Content="Добавить" HorizontalAlignment="Left" Margin="36,143,0,0" VerticalAlignment="Top" FontSize="14" Width="119"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="236,143,0,0" VerticalAlignment="Top" FontSize="14" Width="95" Click="Button_Click"/>

    </Grid>
</Window>
